<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="setupRoot" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ponggame.controller.SetupController"
           prefWidth="800" prefHeight="600" style="-fx-background-color: #1a1a2e;">
    
    <!-- Step 1: Game Mode -->
    <VBox fx:id="step1" alignment="CENTER" spacing="20" visible="true">
        <Label text="SELECT GAME MODE" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <Button text="Human vs Human" onAction="#selectHumanVsHuman" prefWidth="250" prefHeight="50" 
                style="-fx-background-color: #00ff00; -fx-text-fill: black; -fx-font-size: 16px;"/>
        <Button text="Human vs AI" onAction="#selectHumanVsAI" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #ffff00; -fx-text-fill: black; -fx-font-size: 16px;"/>
        <Button text="AI vs AI" onAction="#selectAIvsAI" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #ff6600; -fx-text-fill: black; -fx-font-size: 16px;"/>
    </VBox>
    
    <!-- Step 2: Player Count -->
    <VBox fx:id="step2" alignment="CENTER" spacing="20" visible="false">
        <Label text="SELECT NUMBER OF PLAYERS" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="2 Players" onAction="#select2Players" prefWidth="120" prefHeight="80"
                    style="-fx-background-color: #4444ff; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="3 Players" onAction="#select3Players" prefWidth="120" prefHeight="80"
                    style="-fx-background-color: #4444ff; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="4 Players" onAction="#select4Players" prefWidth="120" prefHeight="80"
                    style="-fx-background-color: #4444ff; -fx-text-fill: white; -fx-font-size: 16px;"/>
        </HBox>
        <Button text="← Back" onAction="#goToStep1" style="-fx-background-color: #666666; -fx-text-fill: white;"/>
    </VBox>
    
    <!-- Step 3: Player Composition -->
    <VBox fx:id="step3" alignment="CENTER" spacing="20" visible="false">
        <Label text="PLAYER COMPOSITION" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <Label fx:id="compositionLabel" text="" style="-fx-text-fill: #cccccc; -fx-font-size: 16px;"/>
        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Humans" style="-fx-text-fill: #00ff00; -fx-font-size: 14px;"/>
                <HBox alignment="CENTER" spacing="10">
                    <Button text="-" onAction="#decreaseHumans" prefWidth="40" prefHeight="40" style="-fx-font-size: 18px;"/>
                    <Label fx:id="humanCountLabel" text="1" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Button text="+" onAction="#increaseHumans" prefWidth="40" prefHeight="40" style="-fx-font-size: 18px;"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <Label text="AIs" style="-fx-text-fill: #ff0000; -fx-font-size: 14px;"/>
                <Label fx:id="aiCountLabel" text="1" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button text="← Back" onAction="#goToStep2" style="-fx-background-color: #666666; -fx-text-fill: white;"/>
            <Button text="Next →" onAction="#goToStep4" style="-fx-background-color: #00aa00; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
    
    <!-- Step 4: Position Assignment -->
    <VBox fx:id="step4" alignment="CENTER" spacing="20" visible="false">
        <Label text="ASSIGN POSITIONS" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <GridPane fx:id="positionGrid" hgap="20" vgap="15" alignment="CENTER"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="← Back" onAction="#goToStep3" style="-fx-background-color: #666666; -fx-text-fill: white;"/>
            <Button text="Next →" onAction="#goToStep5" style="-fx-background-color: #00aa00; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
    
    <!-- Step 5: Key Bindings (Info Only) -->
    <VBox fx:id="step5" alignment="CENTER" spacing="20" visible="false">
        <Label text="CONTROL KEYS" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <VBox fx:id="keyBindingsDisplay" alignment="CENTER" spacing="10"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="← Back" onAction="#goToStep4" style="-fx-background-color: #666666; -fx-text-fill: white;"/>
            <Button text="Next →" onAction="#goToStep6" style="-fx-background-color: #00aa00; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
    
    <!-- Step 6: Confirmation -->
    <VBox fx:id="step6" alignment="CENTER" spacing="15" visible="false">
        <Label text="CONFIRM SETTINGS" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <VBox fx:id="summaryDisplay" alignment="CENTER" spacing="8"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="← Back" onAction="#goToStep5" style="-fx-background-color: #666666; -fx-text-fill: white;"/>
            <Button text="START GAME" onAction="#startGame" prefWidth="200" prefHeight="50"
                    style="-fx-background-color: #00ff00; -fx-text-fill: black; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
    
</StackPane>
